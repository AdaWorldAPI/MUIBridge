<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0-windows</TargetFramework>
    <UseWindowsForms>true</UseWindowsForms>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <RootNamespace>MUIBridge</RootNamespace>
    <AssemblyName>MUIBridge</AssemblyName>
    <Version>1.0.0</Version>
    <Authors>MUIBridge Team</Authors>
    <Description>WinForms drop-in replacement with Material UI theming and AI-driven mood reactivity. Inspired by Amiga MUI.</Description>
    <PackageTags>winforms;mui;material-design;theming;ai;prediction</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="8.0.0" />
    <PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" Version="8.0.0" />
    <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="8.0.0" />
  </ItemGroup>

  <!-- Exclude legacy .txt placeholder files from compilation -->
  <ItemGroup>
    <None Remove="**\*.cs.txt" />
    <Content Include="**\*.cs.txt">
      <CopyToOutputDirectory>Never</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

</Project>
